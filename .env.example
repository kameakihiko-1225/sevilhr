# Database
# PostgreSQL connection string
# For Replit: Use the connection string from Replit's Database tool
DATABASE_URL=postgresql://username:password@host:port/database

# Backend Configuration
# Backend server port (default: 3001)
BACKEND_PORT=3001
PORT=3001

# Frontend Configuration
# Backend API URL (use your Replit app URL or domain)
NEXT_PUBLIC_API_URL=https://your-app-name.your-username.repl.co

# Telegram Bot URL (e.g., https://t.me/your_bot_username)
NEXT_PUBLIC_TELEGRAM_BOT_URL=https://t.me/your_bot_username

# Default locale (uz/en/ru)
NEXT_PUBLIC_DEFAULT_LOCALE=uz

# Telegram Bot Configuration
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram Group ID for leads (e.g., @your_group_id or -1001234567890)
TELEGRAM_GROUP_ID=@your_group_id

# Telegram Channel ID for announcements (e.g., @your_channel_id)
TELEGRAM_CHANNEL_ID=@your_channel_id

# Webhook Configuration
# Webhook URL for Telegram updates (should point to /api/webhook/telegram endpoint)
WEBHOOK_URL=https://your-app-name.your-username.repl.co

# Secret token for webhook verification (optional but recommended)
WEBHOOK_SECRET=your_webhook_secret_token

# CORS Configuration (optional)
# Frontend URL for CORS (defaults to * in production)
FRONTEND_URL=https://your-app-name.your-username.repl.co
CORS_ORIGIN=https://your-app-name.your-username.repl.co

# Node Environment
NODE_ENV=production
