# Unified Deployment Environment Variables
# Configure these in Vercel/Netlify project settings

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_TELEGRAM_BOT_URL=https://t.me/your_bot_username
NEXT_PUBLIC_DEFAULT_LOCALE=uz

# API URL (same domain in unified deployment)
NEXT_PUBLIC_API_URL=https://sevilhr.vercel.app

# ============================================
# BACKEND / TELEGRAM
# ============================================
NODE_ENV=production
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_GROUP_ID=@your_group_id
TELEGRAM_CHANNEL_ID=@your_channel_id

# Webhook (same domain now - no separate backend URL)
WEBHOOK_URL=https://sevilhr.vercel.app/api/webhook/telegram
WEBHOOK_SECRET=your_secure_random_webhook_secret

# CORS (same origin in unified deployment)
CORS_ORIGIN=https://sevilhr.vercel.app
FRONTEND_URL=https://sevilhr.vercel.app
